<div class="container text-center">
  <div class="form row">
    <div class="col-md-6 col-md-offset-3">
      <h1>Log In</h1>
      <hr>

      <form id="login-form" method="POST" action="/sessions">
        <div class="alert alert-danger" id="user-not-found" role="alert">
          <strong>Oh snap!</strong> <a href="#" class="alert-link">Email or/and password not found!</a> Try submitting again.
        </div>
        <div class="form-group">
          <input type="text" id="username" name="username" class="form-control"  placeholder="Username" autofocus required>
        </div>
        <div class="form-group">
          <input type="password" name="password" class="form-control" placeholder="Password" required>
        </div>
        <div class="form-group">
          <input type="submit" value="Log In" class="btn btn-primary">
        </div>
        <a href="/signup">Sign Up</a>
      </form>
    </div>
  </div>
</div>